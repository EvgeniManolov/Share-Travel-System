@model OfferPaginationViewModel

<div class="well search-bar">
    <form>
        <div class="form-group">
            <div class="row">
                <div >All Offers @Html.RadioButton("privateOffers", false, true)</div>
                <div class="ml-3">My Offers @Html.RadioButton("privateOffers", true)</div>
            </div>
        </div>
        <div class="form-group">
            <div class="row">
                <div >All Types @Html.RadioButton("filter", "All", true) </div>
                <div class="ml-3">Search Types @Html.RadioButton("filter", "Search")</div>
                <div class="ml-3">Suggest Types @Html.RadioButton("filter", "Suggest")</div>
                <button type="submit" class="btn btn-primary btn-sm text-white ml-5" href="@Url.Action("All", "Offers")">Apply Filters</button>
            </div>
        </div>
    </form>
    <form class="ml-4">
        <div class="form-group">
            <div class="row ml-5">
                <input  name="search" type="text" value="@Model.Search" placeholder=" Search...">
                <button type="submit" class="btn btn-primary btn-sm text-white ml-5" href="@Url.Action("All", "Offers")">Search</button>
            </div>
        </div>
    </form>
</div>
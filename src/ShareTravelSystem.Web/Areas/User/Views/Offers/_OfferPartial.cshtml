@model OfferPaginationViewModel

@{
    var likedOffers = ViewData["LikedDislikedOffersIds"] as List<int>;
}


@foreach (var offer in Model.AllOffers.Offers)
{
    <div class="col-3">
        <div class="project project-default">
            <div class="shape">
                <div class="shape-text">
                    @offer.Type
                </div>
            </div>
            <div class="project-content mt-4" style="word-wrap: break-word;">
                <h1 class="lead">
                    <strong>From</strong> @offer.DepartureTownName <br />
                    To @offer.DestinationTownName
                </h1>
                <h6 class="mt-1"><strong>On:</strong> @offer.DepartureDate</h6>
                <p class="mt-3"><strong>Description:</strong> @offer.Description</p>

            </div>
            <div class="project-content mb-0">
                <p class="mt-1"><strong>Seat:</strong> @offer.Seat</p>
                <p class="mb-1"><strong>Price:</strong> @offer.Price</p>
                <p class="mb-1"><strong>TotalRating:</strong> @offer.TotalRating</p>
            </div>
            <div class="mb-0">
                <div class="row ml-2 mt-5">
                    <a class="btn bg-primary text-white" asp-controller="Offers" asp-action="Details" asp-route-id="@offer.Id">
                        <strong>Preview</strong>
                    </a>
                    @if (!likedOffers.Contains(offer.Id))
                    {
                        <form asp-controller="Offers" asp-action="Like" method="post" class="ml-5">
                            <input type="hidden" name="offerId" value="@offer.Id" />
                            <button type="submit" id="likeDislikeButton" class="likeOfferClass" title="Like">
                                <i class="fas fa-thumbs-up"></i>
                            </button>
                        </form>
                        <form asp-controller="Offers" asp-action="DisLike" method="post">
                            <input type="hidden" name="offerId" value="@offer.Id" />
                            <button type="submit" id="likeDislikeButton" class="dislikeOfferClass" title="DisLike">
                                <i class="fas fa-thumbs-down"></i>
                            </button>
                        </form>
                    }
                </div>
            </div>
        </div>
    </div>
}
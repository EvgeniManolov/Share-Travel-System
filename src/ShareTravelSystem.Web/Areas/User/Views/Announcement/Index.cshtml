@model ShareTravelSystem.ViewModels.AnnouncementPaginationViewModel

@using System.Linq;
<div class="container">
    <div class="container mt-3">
        <div class="row">
            <div class="col-lg-6 col-md-6 col-md-offset-3 col-lg-offset-0">
                <div class="well">
                    <h3 align="center" class="mb-0">Filter Announcements</h3>
                    <hr class="col-lg-6 mt-0" />
                    <form class="form-horizontal">
                        <div class="form-group">
                            <div class="row">
                                <label for="location1" class="control-label ml-3">Announcements: </label>
                                <div class="ml-3">All Announcements:   @Html.RadioButton("privateAnnouncements", false, true)</div>
                                <div class="ml-3">My Announcements:   @Html.RadioButton("privateAnnouncements", true)</div>
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="row">
                                <label for="location1" class="control-label ml-3">Content: </label>
                                <input name="search" type="text" value="@Model.Search" class="ml-3">
                            </div>
                            <div class="mt-1 col-12 text-right mb-2">
                                <button type="submit" class="btn btn-primary text-white" href="@Url.Action("Index","Announcement")">Apply Filters</button>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
    <div class="col-lg-12 mt-3"><h3>@ViewData["Title"] <a class="btn icon-btn btn-primary pull-right" asp-controller="Announcement" asp-action="Create"><span class="glyphicon btn-glyphicon glyphicon-plus img-circle"></span> Create New Announcement</a></h3></div>
    <hr />
    <div class="card-deck">
        @if (@Model.AllAnnouncements.Announcements.Count() == 0)
        {
            <h2 class="ml-4">No announcements</h2>
        }
        @foreach (var announcement in @Model.AllAnnouncements.Announcements)
        {
            @await Html.PartialAsync("_AnnouncementPartial", announcement)
        }
    </div>
    <hr />
</div> 

@await Html.PartialAsync("_PagingAnnouncement", Model)


@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
}

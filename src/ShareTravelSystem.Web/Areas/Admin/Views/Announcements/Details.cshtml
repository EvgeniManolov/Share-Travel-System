@model DetailsAnnouncementViewModel

@{
    ViewData["Title"] = "Details";
}

<h1 class="ml-3 text-center display-4">Details Announcement</h1>
<div class="row justify-content-center">
    <div class="card text-center w-75">
        <div class="card-header">
            <strong>@Model.Title</strong>
        </div>
        <div class="card-body">
            <p class="card-text">@Model.Content</p>
        </div>
        <div class="card-footer text-muted">
            Last updated on @Model.CreateDate by @Model.Author
        </div>
    </div>
</div>
<div class="row justify-content-center mt-2">
    <form asdp-area="Admin" asp-controller="Announcements" asp-action="Delete" asp-route-id="@Model.Id" method="post">
        <input type="hidden" name="id" value="@Model.Id" />
        <button type="submit" class="btn btn-primary ml-3">Delete</button>
    </form>
    <a asp-controller="Announcements" asp-action="Index" class="btn btn-primary ml-3">Back</a>
</div>

@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
}

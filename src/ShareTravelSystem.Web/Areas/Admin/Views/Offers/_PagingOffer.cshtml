@model OfferPaginationViewModel

@{
    var itemsPerPage = Model.Size;
    var itemsCount = Model.Count;

    var currentPage = Model.Page;

    var pageUp = (double) itemsCount / (itemsPerPage * Model.Page) > 1 ? Model.Page + 1 : Model.Page;
    var pageDown = Model.Page > 1 ? Model.Page - 1 : Model.Page;

    var totalPages = (int) Math.Ceiling(((double) Model.Count / Model.Size));


    <p class="text-center">Page @Model.Page of @(totalPages < 1 ? 1 : totalPages)</p>
}

<div class="text-center col-12">
    <div class="btn-group mb-3" role="group" aria-label="Basic example">
        <a href="/Admin/Offers/Index?page=@pageDown.ToString()&search=@Model.Search&privateOffers=@Model.PrivateOffers&filter=@Model.Filter" class="btn btn-outline-primary">&#8678;</a>
        <button type="button" class="btn btn-outline-primary">@Model.Page</button>
        <a href="/Admin/Offers/Index?page=@pageUp.ToString()&search=@Model.Search&privateOffers=@Model.PrivateOffers&filter=@Model.Filter" class="btn btn-outline-primary">&#8680;</a>
    </div>
</div>
@model ShareTravelSystem.ViewModels.TownPaginationViewModel

@{
    ViewData["Title"] = "Manage Towns";
}

@Html.ValidationSummary(false)
<div class="container">
    <form asp-controller="Town" asp-action="Index" method="get" class="mt-3">
        <input name="search" type="text" value="@Model.Search">
        <button type="submit" class="btn btn-primary" href="@Url.Action("Index","Town")"><i class="fas fa-search-plus"></i></button>
    </form>
    <div class="col-5"><hr class="bg-primary" /></div>
    
    @if (Model.Towns.Count() == 0)
    {
        <h1>No Towns</h1>
    }
    else
    {
        <table class="table table-hover col-5 mt-3" id="townTable">
            <thead>
                <tr class="bg-primary">
                    <th colspan="3">Towns</th>
                </tr>
                <tr>
                    <th scope="col" id="topRow">#</th>
                    <th scope="col" id="topRow">Name</th>
                    <th scope="col" id="topRow"></th>
                </tr>
            </thead>
            <tbody>

                @foreach (var town in Model.Towns)
                {
                    @await Html.PartialAsync("_TownPartial", town)
                }
            </tbody>
        </table>
        @await Html.PartialAsync("_PagingTown", Model)
    }

</div>



@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
}





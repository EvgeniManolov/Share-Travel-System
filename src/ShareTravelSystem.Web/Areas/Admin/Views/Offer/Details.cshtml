@model ShareTravelSystem.ViewModels.Offer.DetailsOfferViewModel

@{
    ViewData["Title"] = "All Offers";
}

<div class="Container">
    <h1 class="m-3">Preview Offer</h1>
    <div class="col-3">
        <div class="project project-default">
            <div class="shape">
                <div class="shape-text">
                    @Model.Type
                </div>
            </div>
            <div class="project-content mt-4">
                <h1 class="lead">
                    From @Model.DepartureTownName <br />
                    To @Model.DestinationTownName
                </h1>
                <h6 class="mt-1"> On: @Model.DepartureDate</h6>
                <p class="mt-3">Description: @Model.Description</p>

            </div>
            <div class="project-content mb-0">
                <p class="mt-1">Seat: @Model.Seat</p>
                <p class="mb-1">Price: @Model.Price</p>
                <p class="mb-1">Post on: @Model.CreateDate</p>
                <p class="mb-1">Post by: @Model.Author</p>
                <p class="mb-1">Rating: @Model.TotalRating</p>
            </div>
            <div class="mb-5">
                <form method="post">
                    <input type="hidden" name="offerId" value="@Model.Id" />
                    <button type="submit" class="btn btn-primary btn-xs btn-update btn-add-card" asp-area="Admin" asp-controller="Offer" asp-action="Delete" asp-route-id="@Model.Id">Delete</button>
                </form>
            </div>
        </div>
    </div>
    <div class="col-lg-6 col-sm-4 col-md-4 col-lg-4 position-relative">
        <h1 class="mt-2">Comments</h1>
        <hr />
    </div>
    <div>
        <ul>
            @if (Model.Reviews.Count == 0)
            {
                <li>No comments</li>
            }
            else
            {
                @foreach (var review in @Model.Reviews)
                {
                    <li>
                        
                        [ @review.Author on @review.CreateDate.ToLocalTime() ] : @review.Content
                        <div>
                            <form method="post">
                                <input type="hidden" name="reviewId" value="@review.Id" />
                                <button type="submit" class="btn btn-primary btn-xs btn-update btn-add-card" asp-area="Admin" asp-controller="Review" asp-action="Delete" asp-route-id="@review.Id">Delete</button>
                            </form>
                        </div>
                    </li>
                }
            }
        </ul>
    </div>
</div>


@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
}


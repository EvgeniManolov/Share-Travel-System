@model ShareTravelSystem.ViewModels.AnnouncementPaginationViewModel

@using System.Linq;

<div class="container">
    <div class="container mt-3">
        <div class="row">
            <div class="col-lg-6 col-md-6 col-md-offset-3 col-lg-offset-0">
                <div class="well">
                    <h3 align="center" class="mb-0">Search Announcements</h3>
                    <hr class="col-lg-6 mt-0" />
                    <form class="form-horizontal">
                        <div class="form-group">
                            <div class="row">
                                <label for="location1" class="control-label ml-3">Content: </label>
                                <input name="search" type="text" value="@Model.Search" class="ml-3">
                                <button type="submit" class="btn btn-primary text-white ml-2" href="@Url.Action("Index","Announcement")">Search</button>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
    <hr />
    <div class="card-deck">
        @if (@Model.AllAnnouncements.Announcements.Count() == 0)
        {
            <h2 class="ml-4">No announcements</h2>
        }
        @foreach (var announcement in @Model.AllAnnouncements.Announcements)
        {
            @await Html.PartialAsync("_AnnouncementPartial", announcement)
        }
    </div>
    <hr />
</div> 

@await Html.PartialAsync("_PagingAnnouncement", Model)


@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
}

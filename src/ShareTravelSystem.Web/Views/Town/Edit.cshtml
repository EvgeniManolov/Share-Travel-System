@model ShareTravelSystem.ViewModels.Town.EditTownViewModel

@{
    ViewData["Title"] = "Edit Town";
}

<h2 class="ml-5 mt-3">@ViewData["Title"]</h2>
<form asp-controller="Town" asp-action="Edit" method="post" class="ml-5">
    <div class="form-group row">
        <div class="col-3">
            <input class="form-control" type="hidden" name="Id" value="@Model.Id">
            <input class="form-control" name="Name" value="@Model.Name">
        </div>
    </div>
    <div class="row">
        <div class="col-1">
            <button type="submit" class="btn btn-outline-primary">Save</button>
            <a class="btn btn-outline-primary ml-3" href="@Url.Action("All","Town")">Back</a>
        </div>
    </div>
</form>


@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
}


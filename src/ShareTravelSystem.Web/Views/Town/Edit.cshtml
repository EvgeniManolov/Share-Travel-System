@model ShareTravelSystem.ViewModels.Town.EditTownViewModel

@{
    ViewData["Title"] = "Edit Town";
}

<h2>Edit Town with ID: @Model.Id</h2>
<form asp-controller="Town" asp-action="Edit" method="post">
    <div class="form-group row">
        <div class="col-3">
            <input class="form-control" type="hidden" name="Id" value="@Model.Id">
            <input class="form-control" name="Name" value="@Model.Name">
        </div>
        <div class="col-1">
            <button  type="submit" class="btn btn-outline-success">Save Changes</button>
        </div>
        <a class="btn btn-outline-success" href="@Url.Action("All","Town")">Back</a>
    </div>
</form>


@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
}


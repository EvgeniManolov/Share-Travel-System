@model DisplayAllMessagesViewModel

@using System;

@{
    ViewBag.Title = "Chat";
}

<div class="container">
    <div class="input-holder">
        <div class="input-holder">
            <div id="message-holder" class="mt-3 d-flex justify-content-start">
                <h4>Message </h4>
                <input class="w-75 ml-4 pl-3" type="text" id="messageInput" placeholder="Message..." />
                <button id="sendButton" class="ml-4 btn bg-primary"><h5 class="text-white">Send</h5></button>
            </div>
        </div>
    </div>
    <hr style="height: 5px;" class="bg-primary" />
    <div id="messagesList" style="font-size: 32px; word-wrap: break-word;">
        @foreach (var message in Model.Messages)
        {
            <div>[@message.CreateOn][@message.Author] : @message.Text</div>
        }
    </div>
</div>

@section Scripts {
    <script>
        var connection =
            new signalR.HubConnectionBuilder()
                .withUrl("/chat")
                .build();
        connection.on("NewMessage",
            function (message) {
                var chatInfo = `<div>[@DateTime.UtcNow][${message.user}] :  ${message.text}</div>`;
                $("#messagesList").prepend(chatInfo);
            });
        $("#sendButton").click(function () {
            var message = $("#messageInput").val();
            connection.invoke("Send", message);
        });
        connection.start().catch(function (err) {
            return console.error(err.toString());
        });
    </script>
}